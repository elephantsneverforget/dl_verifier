{
    "name": "Elevar Data Layer Verifier",
    "description": "Verify your headless data layer events.",
    "version": "1.0",
    "manifest_version": 3,
    "background": {
        "service_worker": 
            "./background.js"
        
    },
    "content_scripts": [
        {
            "matches": ["http://*/*", "https://*/*"],
            "js": ["content_script.js"],
            "css": ["./notyf.css"],
            "all_frames": false
        }
    ],
    "web_accessible_resources": [
        {
            "resources": ["index.js", "verifier.js", "./notyf.css"],
            "matches": ["<all_urls>"]
        }
    ],
    "devtools_page": "./devtools_page.html",
    "icons": {
        "128": "icons/icon128.png",
        "48": "icons/icon48.png"
    },
    "permissions": ["storage", "debugger", "background", "tabs", "webRequest", "webNavigation"],
    "host_permissions": [
        "<all_urls>"
      ]
}  
